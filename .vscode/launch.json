{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Tic Tac Toe",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/applications/tic_tac_toe/play.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Tic Tac Toe Train MLP",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/applications/tic_tac_toe/train.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Tic Tac Toe Train Transformer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/applications/tic_tac_toe/train.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": ["--model", "transformer"]
        },
        {
            "name": "Python: Dots And Boxes Train MLP",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/applications/dots_and_boxes/train.py",
